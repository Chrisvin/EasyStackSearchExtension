{
    "manifest_version": 2,
    "version": "1.3.0",
    
    "name": "Stack Overflow Search",
    "description" : "Adds an 'so' omnibox command to search Stack Overflow.",

    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    
    "omnibox": { 
        "keyword" : "so",
        "icons": {
            "16": "icons/16.png"
        }
    },

    "background": {
        "scripts": [
            "background/omnibox.js",
            "background/contextMenus.js"
        ],
        "persistent": false
    },

    "options_page": "options/options.html",

    "permissions": [
        "storage",
        "contextMenus"
    ]    
}